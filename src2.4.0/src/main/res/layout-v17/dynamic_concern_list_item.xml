<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/shadow_corners_radius_bg" android:padding="4dp" android:layout_width="288dp" android:layout_height="112dp">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_icon" android:layout_width="72dp" android:layout_height="72dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_weight="1" android:layout_marginStart="12dp">
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_sub_major" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_label" android:ellipsize="end" android:id="@+id/tv_sign" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:singleLine="true"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/sport_green" android:gravity="center" android:id="@+id/tv_concern" android:background="@drawable/concern_border_bg" android:layout_width="52dp" android:layout_height="24dp" android:layout_marginTop="6dp" android:text="关注"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_change" android:paddingTop="17dp" android:paddingRight="17dp" android:paddingBottom="17dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/close_icon"/>
</LinearLayout>
