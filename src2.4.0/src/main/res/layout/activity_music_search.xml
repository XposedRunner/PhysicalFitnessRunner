<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" style="@style/Sports.RootStyle">
    <include layout="@layout/toolbar"/>
    <View style="@style/horizontal_line"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="44dp">
        <com.zjwh.android_wh_physicalfitness.view.XEditText android:id="@+id/etSearch" android:layout_width="0dp" android:hint="搜索专辑" android:layout_weight="1" style="@style/SW.Search"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/sport_green" android:gravity="center_vertical" android:id="@+id/tvSearch" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="搜索"/>
    </LinearLayout>
    <View style="@style/horizontal_line"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
