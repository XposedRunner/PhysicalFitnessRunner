<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.geetest.sdk.views.GT3GeetestView android:layout_gravity="center_vertical" android:id="@+id/geetest_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
            <TextView android:textSize="14sp" android:textColor="#383838" android:id="@+id/tv_test_geetest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gt3_geetest_click"/>
            <TextView android:textSize="14sp" android:textColor="#005aff" android:id="@+id/tv_test_geetest_cof" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/gt3_geetest_try_again"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_geetest_logo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textSize="9sp" android:textColor="#c3c3c3" android:id="@+id/tv_test_geetest_cord" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:text="100" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
