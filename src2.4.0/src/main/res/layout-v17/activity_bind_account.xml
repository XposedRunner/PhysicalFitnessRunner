<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/t_25" android:textStyle="bold" android:textColor="@color/text_color_major" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="68dp" android:text="@string/txt_complete_user_info" android:layout_marginStart="25dp"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="10dp" android:text="@string/txt_can_not_change" android:layout_marginStart="25dp"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_campus" android:paddingLeft="25dp" android:paddingTop="5dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp" android:layout_marginBottom="5dp" android:hint="@string/hint_campus" android:drawableRight="@mipmap/right_arrow" android:drawablePadding="10dp"/>
        <View android:layout_marginLeft="25dp" android:layout_marginRight="25dp" style="@style/horizontal_line"/>
        <RelativeLayout android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp">
            <EditText android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="center_vertical" android:id="@+id/edt_school_num" android:background="@null" android:layout_width="match_parent" android:layout_height="30dp" android:hint="@string/hint_school_num" android:singleLine="true" android:maxLength="20" android:layout_above="@+id/dividerView2" android:layout_alignParentLeft="true" android:inputType="textFilter" android:layout_alignParentStart="true" style="?android:attr/textViewStyle"/>
            <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_major" android:id="@+id/tv_back_schoolNum" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="找回学号?" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:id="@+id/dividerView2" android:layout_alignParentBottom="true" style="@style/horizontal_line"/>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="@dimen/s_60">
            <EditText android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:id="@+id/edt_name" android:background="@null" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:hint="@string/hint_name" android:singleLine="true" android:maxLength="30" android:layout_toLeftOf="@+id/tv_check" android:layout_alignParentBottom="true" android:inputType="text" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/tv_check" style="?android:attr/textViewStyle"/>
            <View android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/tv_check" android:layout_alignParentBottom="true" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/tv_check" style="@style/horizontal_line"/>
            <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_major" android:gravity="center" android:id="@+id/tv_check" android:background="@drawable/shape_solid_stroke_b2" android:layout_width="90dp" android:layout_height="35dp" android:text="@string/txt_check" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lin_info" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rl_depart" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp">
                <EditText android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="center_vertical" android:id="@+id/edt_depart" android:background="@null" android:layout_width="match_parent" android:layout_height="30dp" android:hint="@string/depart" android:singleLine="true" android:maxLength="30" android:inputType="text" style="?android:attr/textViewStyle"/>
                <View android:id="@+id/mView" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <View android:layout_alignParentBottom="true" style="@style/horizontal_line"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="center_vertical" android:id="@+id/tvClassName" android:background="@null" android:paddingLeft="25dp" android:paddingTop="5dp" android:paddingRight="25dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp" android:hint="班级"/>
            <View android:id="@+id/lineClassName" android:visibility="gone" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" style="@style/horizontal_line"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="center_vertical" android:id="@+id/tv_sex" android:background="@null" android:paddingLeft="25dp" android:paddingTop="5dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp" android:hint="@string/hint_sex"/>
            <View android:layout_marginLeft="25dp" android:layout_marginRight="25dp" style="@style/horizontal_line"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:gravity="center_vertical" android:id="@+id/tv_enter_year" android:background="@null" android:paddingLeft="25dp" android:paddingTop="5dp" android:paddingRight="25dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="30dp" android:hint="@string/entrance_year"/>
            <View android:layout_marginLeft="25dp" android:layout_marginRight="25dp" style="@style/horizontal_line"/>
        </LinearLayout>
        <Button android:textSize="@dimen/text_size_bigger" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_complete" android:background="@drawable/bind_account_finish_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="25dp" android:layout_marginTop="100dp" android:layout_marginRight="25dp" android:layout_marginBottom="75dp" android:text="@string/txt_submit"/>
    </LinearLayout>
</ScrollView>
