<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView android:scrollbarStyle="outsideOverlay" android:id="@+id/scrollView" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_info" android:background="@drawable/mine_head_bg" android:paddingTop="53dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_icon" android:background="@drawable/white_circle" android:padding="0.5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="16dp" android:src="@drawable/default_round_male" android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="0"/>
                <TextView android:textSize="@dimen/text_size_bigger" android:textColor="@color/white" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="6dp" android:text="@string/app_name" android:layout_marginStart="12dp" app:layout_constraintLeft_toRightOf="@+id/iv_icon" app:layout_constraintTop_toTopOf="@+id/iv_icon"/>
                <TextView android:textSize="@dimen/text_size_smaller" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvLevel" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="12dp" android:drawablePadding="3dp" android:layout_marginStart="12dp" app:layout_constraintBottom_toBottomOf="@+id/tv_name" app:layout_constraintLeft_toRightOf="@+id/tv_name" app:layout_constraintTop_toTopOf="@+id/tv_name"/>
                <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_p_sign" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:text="@string/app_name" android:singleLine="true" app:layout_constraintLeft_toRightOf="@+id/iv_icon" app:layout_constraintRight_toRightOf="@+id/ivRight" app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/white_next_icon" app:layout_constraintBottom_toBottomOf="@+id/iv_icon" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/iv_icon"/>
