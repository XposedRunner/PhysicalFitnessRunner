<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/sportLayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_above="@+id/text1" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/text_size_smaller" android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="4dp" android:text="@string/main_bottom_run" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/ivMainBottomNews" android:visibility="gone" android:layout_width="6dp" android:layout_height="6dp" android:src="@drawable/shape_dot_red" android:layout_alignTop="@+id/icon" android:layout_alignRight="@+id/icon" android:contentDescription="@string/app_name"/>
    <ImageView android:id="@+id/ivFindNew" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-3dp" android:layout_marginRight="-24dp" android:src="@drawable/find_new_icon" android:layout_alignTop="@+id/icon" android:layout_alignRight="@+id/icon" android:contentDescription="@string/app_name"/>
</RelativeLayout>
