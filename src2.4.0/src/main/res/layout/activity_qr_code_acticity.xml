<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@color/white" android:paddingLeft="27.5dp" android:paddingRight="27.5dp" android:layout_width="300dp" android:layout_height="350dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_info" android:layout_width="match_parent" android:layout_height="80dp">
            <ImageView android:id="@+id/iv_icon" android:layout_width="60dp" android:layout_height="60dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/s_15" android:layout_weight="1">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_size_normal" android:textStyle="bold" android:textColor="@color/text_color_sub_major" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:lines="1" android:singleLine="true"/>
                    <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_sub_major" android:id="@+id/tv_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_hint" android:ellipsize="end" android:id="@+id/tv_depart" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/app_name" android:singleLine="true"/>
                <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_label" android:id="@+id/tv_school_num" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/iv" android:layout_width="245dp" android:layout_height="245dp" android:layout_marginTop="12.5dp" android:layout_marginBottom="12.5dp" android:scaleType="fitXY"/>
    </LinearLayout>
</FrameLayout>
