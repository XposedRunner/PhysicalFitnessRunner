<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <SurfaceView android:layout_gravity="center" android:id="@+id/preview_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.zxing.view.ViewfinderView android:id="@+id/viewfinder_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/rl_top" android:background="#8e000000" android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/iv_back" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/back_white" android:scaleType="centerInside" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_bigger" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</FrameLayout>
