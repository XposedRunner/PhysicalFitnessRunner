<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:id="@+id/tvRecordDate" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:gravity="center" android:id="@+id/tvSignInTime" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_marginBottom="12dp" android:layout_weight="1">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/white" android:gravity="center" android:layout_gravity="right" android:id="@+id/tvStatus" android:layout_width="52dp" android:layout_height="28dp"/>
        </FrameLayout>
    </LinearLayout>
    <View android:id="@+id/line" android:layout_marginLeft="16dp" app:layout_constraintBottom_toBottomOf="0" style="@style/horizontal_line"/>
</android.support.constraint.ConstraintLayout>
