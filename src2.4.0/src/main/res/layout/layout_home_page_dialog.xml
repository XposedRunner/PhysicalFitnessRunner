            <TextView android:textSize="@dimen/text_size_big" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_prize_detail" android:background="@drawable/shape_dialog_detail_bg" android:layout_width="96dp" android:layout_height="44dp" android:layout_marginTop="17dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
