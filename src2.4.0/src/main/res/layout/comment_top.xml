<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="64dp">
    <ImageView android:id="@+id/comment_avatar" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginLeft="16dp" android:layout_marginRight="12dp" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/llInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_toLeftOf="@+id/tvConcern" android:layout_toRightOf="@+id/comment_avatar" android:layout_alignTop="@+id/comment_avatar" android:layout_alignBottom="@+id/comment_avatar">
        <TextView android:textSize="14sp" android:textColor="@color/text_color_sub_major" android:gravity="center_vertical" android:id="@+id/comment_nickname" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/text_color_label" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/comment_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvConcern" android:background="@drawable/shape_corner_solid_green" android:visibility="gone" android:layout_width="62dp" android:layout_height="28dp" android:text="关注" android:layout_toLeftOf="@+id/right_button" android:layout_centerVertical="true"/>
    <ImageButton android:id="@+id/right_button" android:background="@null" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/topic_dynamic_right_icon" android:layout_alignParentRight="true"/>
    <TextView android:textSize="@dimen/text_size_smallest" android:textColor="@color/text_color_hint" android:gravity="center" android:id="@+id/tv_ad" android:background="@drawable/shape_dynamic_ad" android:visibility="gone" android:layout_width="50dp" android:layout_height="25dp" android:layout_marginRight="15dp" android:text="品牌广告" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:id="@+id/comment_show_info_layout" android:layout_width="120dp" android:layout_height="match_parent"/>
</RelativeLayout>
