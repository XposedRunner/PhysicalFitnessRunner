            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_run_info" android:background="@color/white" android:layout_width="match_parent" android:layout_height="80dp" android:weightSum="3">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="@dimen/s_0" android:layout_height="match_parent" android:layout_weight="1">
