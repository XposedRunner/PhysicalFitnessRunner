<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_label" android:gravity="center" android:id="@+id/chat_message_time" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/shadow_corners_radius_bg" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="11dp" android:layout_marginRight="12dp">
        <com.zjwh.android_wh_physicalfitness.view.banner.AspectRatioView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginRight="1dp" app:aspectRatio="2.0176">
            <ImageView android:id="@+id/chatPicture" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        </com.zjwh.android_wh_physicalfitness.view.banner.AspectRatioView>
        <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:ellipsize="end" android:id="@+id/chatTitle" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_color_label" android:ellipsize="end" android:id="@+id/chatMessage" android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="2dp"/>
    </LinearLayout>
</LinearLayout>
