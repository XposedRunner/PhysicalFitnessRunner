<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_top_bar"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <EditText android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:id="@+id/et_phone_num" android:background="@null" android:layout_width="match_parent" android:layout_height="50dp" android:hint="输入新手机号" android:singleLine="true" android:inputType="phone"/>
        <View android:background="@color/window_background" android:layout_width="match_parent" android:layout_height="@dimen/s_0.5"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
            <EditText android:textSize="@dimen/text_size_normal" android:textColor="@color/text_color_major" android:textColorHint="@color/text_color_hint" android:id="@+id/et_pwd" android:background="@null" android:layout_width="0dp" android:layout_height="50dp" android:hint="输入验证码" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tv_get_ver_code" android:background="@drawable/shape_btn_appeal" android:layout_width="@dimen/s_90" android:layout_height="35dp" android:text="获取验证码"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
